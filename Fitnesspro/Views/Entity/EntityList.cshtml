
@{
    ViewBag.Title = "EntityList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Basic initialization table -->
<section id="initialization">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Entity List</h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <a href="CreateEntity" class="btn btn-secondary btn-block" role="button">Add Entity</a>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <table class="table table-striped table-bordered" id="tblEntity">
                            <thead>
                                <tr>
                                    <th>Entity Id</th>
                                    <th>Entity Name</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Mobile Number</th>
                                    <th>Enroll Date</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Basic initialization table -->
@section scripts
{
    <script>
      var tblEntity=  $('#tblEntity').DataTable({
            ajax: {
                url: "/api/EntityAdmin/",
                dataSrc:""
            },
              columns: [
            {
                data: "entityId",
            },
            {
                data:"entityName",
            },
            {
                data: "firstName"
            },
            {
                data: "lastName"
            },
            {
                data: "mobileNumber"
            },
            {
                data: "enrollDate"
            },
            {
                data: "email"
            },
            {
                data: "entityId",
                render: function (data,type,entity) {
                    return "<a href='/Entity/EditEntity/"+entity.entityId+"'class='btn btn-secondary btn-block role='button'>Edit</a>";
                }
            },

        ]

            }
        );
    </script>
}

